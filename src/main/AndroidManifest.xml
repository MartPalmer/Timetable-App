<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mjpal.teachertoolkit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SelectDay"
            android:label="Choose a day"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UpdateSettings"
            android:label="Update App Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EnterData"
            android:label="Add Lesson Info"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangeSettings"
            android:label="Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddRoomGroups"
            android:label="@string/title_activity_add_room_groups"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewDay"
            android:label="View Day"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashPage"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".termSettings"
            android:label="Add Holiday"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImportantReminders"
            android:label="@string/title_activity_reminders"
            android:screenOrientation="portrait" />
    </application>

</manifest>